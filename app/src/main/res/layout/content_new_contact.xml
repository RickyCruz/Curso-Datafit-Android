<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="mx.datafit.datafit_curso_android_webservice_soap.activities.NewContactActivity"
    tools:showIn="@layout/activity_new_contact">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/textViewName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:paddingTop="@dimen/edit_text_padding"
                android:text="@string/input_name"
                android:textAppearance="?android:attr/textAppearanceSmall">
                <requestFocus />
            </TextView>

            <EditText
                android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/textViewName"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:inputType="text"
                android:lines="1"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/textViewLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/input_name"
                android:layout_alignStart="@+id/input_name"
                android:layout_below="@+id/input_name"
                android:paddingTop="@dimen/edit_text_padding"
                android:text="@string/input_lastname"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/input_lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/textViewLastName"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:inputType="text"
                android:lines="1"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/textViewCellPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/input_lastname"
                android:layout_alignStart="@+id/input_lastname"
                android:layout_below="@+id/input_lastname"
                android:paddingTop="@dimen/edit_text_padding"
                android:text="@string/input_cellphone"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/input_cellphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/textViewCellPhone"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:inputType="phone"
                android:lines="1"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/textViewPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/input_cellphone"
                android:layout_alignStart="@+id/input_cellphone"
                android:layout_below="@+id/input_cellphone"
                android:paddingTop="@dimen/edit_text_padding"
                android:text="@string/input_phone"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/input_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/textViewPhone"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:inputType="phone"
                android:lines="1"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/textViewEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/input_phone"
                android:layout_alignStart="@+id/input_phone"
                android:layout_below="@+id/input_phone"
                android:paddingTop="@dimen/edit_text_padding"
                android:text="@string/input_email"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/textViewEmail"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/textViewDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/input_email"
                android:layout_alignStart="@+id/input_email"
                android:layout_below="@+id/input_email"
                android:paddingTop="@dimen/edit_text_padding"
                android:text="@string/input_description"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/input_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/textViewDesc"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:inputType="text"
                android:lines="6"
                android:maxLines="12" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>